<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDF8FC"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_lg"
            android:text="Профиль"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/title_text_size" />

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_square_border"
                android:clipToOutline="true"
                android:padding="1dp" />
        </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@mipmap/mark_email_unread" />

                <EditText
                    android:id="@+id/profile_email"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_rounded_border"
                    android:ems="100"
                    android:hint="Введите email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#6a6a6a" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView_name"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@mipmap/user" />

                <EditText
                    android:id="@+id/profile_name"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_rounded_border"
                    android:ems="10"
                    android:hint="Введите имя"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#6a6a6a" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView_phone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@mipmap/phone" />

                <EditText
                    android:id="@+id/profile_phone"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_rounded_border"
                    android:ems="10"
                    android:hint="Введите номер телефона"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#6a6a6a" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView_address"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@mipmap/navigation2" />

                <EditText
                    android:id="@+id/profile_address"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_rounded_border"
                    android:ems="10"
                    android:hint="Введите адрес проживания"
                    android:inputType="textPostalAddress"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#6a6a6a" />
            </LinearLayout>


            <Button
                android:id="@+id/button_photo"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_stroke_gray"
                android:backgroundTint="@null"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="Загрузить новое фото"
                android:textColor="#000"
                android:textSize="14sp"
                app:backgroundTint="@null" />

        <Button
            android:id="@+id/button_access"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_stroke_black"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:text="Подтвердить изменения"
            android:textColor="#FFFFFF"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="14sp"/>

            <Button
                android:id="@+id/button_test"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_stroke_black"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="Пройти тест"
                android:textColor="#FFFFFF"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:textSize="14sp"/>

        <Button
            android:id="@+id/button_my_apps"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_stroke_black"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:text="Мои заявки"
            android:textColor="#FFFFFF"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/button_my_ads"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_stroke_black"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:text="Мои объявления"
            android:textColor="#FFFFFF"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/button_logout"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_stroke_gray"
            android:backgroundTint="@null"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="Выйти из аккаунта"
            android:textColor="#000"
            android:textSize="14sp"
            app:backgroundTint="@null" />

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>