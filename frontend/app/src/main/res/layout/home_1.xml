<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E0D5D5"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#DDF8FC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_lg"
                android:text="Лента объявлений"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/title_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_sm">

                        <Button
                            android:id="@+id/btn_filters"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_stroke_black"
                            android:backgroundTint="@null"
                            android:gravity="center"
                            android:text="Фильтры"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <ImageView
                            android:id="@+id/filter_png"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignStart="@id/btn_filters"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:src="@mipmap/filter_light" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_test_recommendations"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stroke_black"
                        android:backgroundTint="@null"
                        android:gravity="center"
                        android:text="По тесту"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@null" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/filters_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_nav_container"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Порода:"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_breed"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_rounded_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Вид:"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_species"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_rounded_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Возраст:"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_age"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_rounded_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Пол:"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_gender"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_rounded_border" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Цена:"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/edit_price_min"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_rounded_border"
                            android:hint="От"
                            android:inputType="numberDecimal"
                            android:padding="8dp"
                            android:textColor="#000"
                            android:textColorHint="#6a6a6a" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:text="—"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edit_price_max"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_rounded_border"
                            android:hint="До"
                            android:inputType="numberDecimal"
                            android:padding="8dp"
                            android:textColor="#000"
                            android:textColorHint="#6a6a6a" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/cb_sterilized"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Стерилизовано" />

                        <CheckBox
                            android:id="@+id/cb_vaccinated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Есть прививки" />

                        <CheckBox
                            android:id="@+id/cb_hypo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Гипоаллергенное" />

                        <CheckBox
                            android:id="@+id/cb_child_friendly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Дружелюбно к детям" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Требования к пространству:"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spinner_space"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="2"
                                android:background="@drawable/edittext_rounded_border" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_apply_filters"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            android:layout_weight="1"
                            android:background="@drawable/btn_stroke_black"
                            android:backgroundTint="@null"
                            android:text="Применить"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btn_clear_filters"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:layout_weight="1"
                            android:background="@drawable/btn_stroke_gray"
                            android:backgroundTint="@null"
                            android:text="Сбросить"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            app:backgroundTint="@null" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:id="@+id/grid_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="@dimen/spacing_md"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/nav_menu" />
</LinearLayout>