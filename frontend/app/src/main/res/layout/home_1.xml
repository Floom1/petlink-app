<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDF8FC"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#DDF8FC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_lg"
                android:text="Лента объявлений"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/title_text_size" />

            <GridLayout
                android:id="@+id/grid_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="@dimen/spacing_md"
                android:rowCount="2"
                android:useDefaultMargins="true">
                <include layout="@layout/item_ad" android:layout_width="0dp" android:layout_height="200dp" android:layout_columnWeight="1"/>
                <include layout="@layout/item_ad" android:layout_width="0dp" android:layout_height="200dp" android:layout_columnWeight="1"/>
                <include layout="@layout/item_ad" android:layout_width="0dp" android:layout_height="200dp" android:layout_columnWeight="1"/>
                <include layout="@layout/item_ad" android:layout_width="0dp" android:layout_height="200dp" android:layout_columnWeight="1"/>
                <include layout="@layout/item_ad" android:layout_width="0dp" android:layout_height="200dp" android:layout_columnWeight="1"/>
                <include layout="@layout/item_ad" android:layout_width="0dp" android:layout_height="200dp" android:layout_columnWeight="1"/>
                <include layout="@layout/item_ad" android:layout_width="0dp" android:layout_height="200dp" android:layout_columnWeight="1"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/nav_menu" />
</LinearLayout>