<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDF8FC"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#DDF8FC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_lg"
                android:text="Лента объявлений"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/title_text_size" />

            <!-- Фильтры -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="vertical">

                <!-- Кнопка фильтров -->
                <Button
                    android:id="@+id/btn_filters"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:background="@drawable/btn_stroke_black"
                    android:drawableStart="@mipmap/filter"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="Фильтры"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:textStyle="bold" />

                <!-- Панель фильтров (скрываемая) -->
                <LinearLayout
                    android:id="@+id/filters_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_nav_container"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md"
                    android:visibility="gone">

                    <!-- Порода -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Порода:"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_breed"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_rounded_border" />
                    </LinearLayout>

                    <!-- Вид -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Вид:"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_species"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_rounded_border" />
                    </LinearLayout>

                    <!-- Возраст -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Возраст:"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_age"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_rounded_border" />
                    </LinearLayout>

                    <!-- Пол -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Пол:"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_gender"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_rounded_border" />
                    </LinearLayout>

                    <!-- Цена -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Цена:"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_price"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_rounded_border" />
                    </LinearLayout>

                    <!-- Кнопки управления фильтрами -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_apply_filters"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            android:layout_weight="1"
                            android:background="@drawable/btn_stroke_black"
                            android:text="Применить"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="@null"
                            app:backgroundTint="@null"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_clear_filters"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:layout_weight="1"
                            android:background="@drawable/btn_stroke_gray"
                            android:text="Сбросить"
                            android:textColor="#000000"
                            android:backgroundTint="@null"
                            app:backgroundTint="@null"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:id="@+id/grid_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="@dimen/spacing_md"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />

                <include
                    layout="@layout/item_ad"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/nav_menu" />
</LinearLayout>