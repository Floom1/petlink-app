<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DDF8FC"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/rdiz4hjyn38q"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/rt5xdbtdxne8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="41dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="Тест совместимости"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/r52mso30hcmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:background="@drawable/bg_test_text"
                android:orientation="vertical"
                android:paddingVertical="19dp">

                <LinearLayout
                    android:id="@+id/rzcd1qd4pkb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/riummnmgfnl"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="19dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon"
                        app:shapeAppearanceOverlay="@style/cr6" />

                    <TextView
                        android:id="@+id/rzzxe358b6gl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Внимание"
                        android:textColor="#1E1E1E"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/rmkhe04jghkp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:layout_marginEnd="36dp"
                    android:layout_weight="1"
                    android:text="Это очень важный тест, который вам дадут пройти лишь раз. Отнеситесь, пожалуйста, серьёзно."
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Q1: Где вы проживаете? (outer question card with inner answers card) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="#E6F7E9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Где вы проживаете?"
                        android:textColor="#1E1E1E"
                        android:textSize="16sp" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <RadioGroup
                                android:id="@+id/rg_residence"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/rb_res_apartment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Квартира" />
                                <RadioButton
                                    android:id="@+id/rb_res_private"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Частный дом" />
                            </RadioGroup>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Q2: Сколько времени вы проводите дома в будние дни? -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="#E6F7E9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Сколько времени вы проводите дома в будние дни?"
                        android:textColor="#1E1E1E"
                        android:textSize="16sp" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <RadioGroup
                                android:id="@+id/rg_weekday_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/rb_time_lt4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Менее 4 часов" />
                                <RadioButton
                                    android:id="@+id/rb_time_4_8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4-8 часов" />
                                <RadioButton
                                    android:id="@+id/rb_time_gt8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Более 8 часов" />
                            </RadioGroup>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Q3: Есть ли маленькие дети (до 7 лет)? -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="#E6F7E9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Есть ли в вашей семье маленькие дети (до 7 лет)?"
                        android:textColor="#1E1E1E"
                        android:textSize="16sp" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <RadioGroup
                                android:id="@+id/rg_kids"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/rb_kids_yes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Да" />
                                <RadioButton
                                    android:id="@+id/rb_kids_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Нет" />
                            </RadioGroup>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Q4: Планируете ли переезд в ближайшие 6 месяцев? -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="#E6F7E9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Планируете ли вы переезд в ближайшие 6 месяцев?"
                        android:textColor="#1E1E1E"
                        android:textSize="16sp" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <RadioGroup
                                android:id="@+id/rg_move"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/rb_move_yes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Да" />
                                <RadioButton
                                    android:id="@+id/rb_move_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Нет" />
                            </RadioGroup>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Q5: Какой у вас опыт владения домашними животными? -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="#E6F7E9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Какой у вас опыт владения домашними животными?"
                        android:textColor="#1E1E1E"
                        android:textSize="16sp" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <RadioGroup
                                android:id="@+id/rg_experience"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/rb_exp_none"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Нет опыта" />
                                <RadioButton
                                    android:id="@+id/rb_exp_had_before"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Имел(а) животное ранее" />
                                <RadioButton
                                    android:id="@+id/rb_exp_now"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="В данный момент владею животным" />
                            </RadioGroup>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Q6: Есть ли аллергия на шерсть животных? -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="#E6F7E9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Есть ли у вас аллергия на шерсть животных?"
                        android:textColor="#1E1E1E"
                        android:textSize="16sp" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <RadioGroup
                                android:id="@+id/rg_allergy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/rb_allergy_yes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Да" />
                                <RadioButton
                                    android:id="@+id/rb_allergy_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Нет" />
                            </RadioGroup>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Кнопка отправки теста -->
            <Button
                android:id="@+id/button_submit_test"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_stroke_black"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="Отправить тест"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>