<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetLink"
        tools:targetApi="31">
        <activity
            android:name=".ui.auth.RegActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.HomeContent"
            android:exported="true" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="true" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.test.TestActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.AnimalDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.applications.ApplicationsActivity"
            android:exported="true" />
        <activity
            android:name=".ui.applications.ApplicationDetailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.ads.MyAdsActivity"
            android:exported="true" />
        <activity
            android:name=".ui.myanimal.MyAnimalDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.myanimal.EditAnimalActivity"
            android:exported="false" />
        <activity
            android:name=".ui.favorites.FavoritesActivity"
            android:exported="true" />
        <activity
            android:name=".ui.profile.NotificationSettingsActivity"
            android:exported="false" />
    </application>

</manifest>